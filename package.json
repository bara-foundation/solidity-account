{
  "name": "@bara-foundation/solidity-account",
  "version": "0.1.1-5",
  "files": [
    "/contracts/**/*.sol",
    "/contracts/**/*.js",
    "/dist/**/*.js",
    "/dist/**/*.d.ts",
    "/build/contracts/*.json",
    "!/contracts/mocks/**/*"
  ],
  "scripts": {
    "tsc": "tsc && scripts/post-tsc.sh",
    "prepack": "scripts/prepack.sh",
    "pack": "scripts/prepare-contracts-package.sh",
    "clean": "hardhat clean && rimraf build contracts/build",
    "compile:hardhat": "env COMPILE_MODE=production hardhat compile",
    "compile:tsc": "run-s pack tsc",
    "compile": "run-s clean compile:hardhat compile:tsc",
    "sync": "run-s pack",
    "release": "scripts/release/release.sh",
    "version": "scripts/release/version.sh"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@typechain/ethers-v5": "^7.1.2",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.22",
    "@types/mocha": "^9.0.0",
    "@types/node": "^16.10.2",
    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "2.6.4",
    "micromatch": "^4.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.3.2",
    "kardia-js-sdk": "^0.5.1",
    "node-appwrite": "^2.5.0"
  }
}
