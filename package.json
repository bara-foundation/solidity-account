    "chai": "^4.3.4",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.7",
    "hardhat": "2.6.4",
    "micromatch": "^4.0.4",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typechain": "^5.1.2",
